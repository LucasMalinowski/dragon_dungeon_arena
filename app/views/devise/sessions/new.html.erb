<body class="flex justify-center items-center min-h-screen bg-[url('/assets/gates.png')] bg-no-repeat bg-cover bg-center">
<div class="w-1/3 bg-transparent border-2 border-solid border-white/25 backdrop-blur-md	 text-white rounded-xl py-7 px-10">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="text-center text-4xl	">Sign Up</h1>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="relative w-full h-12 my-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "w-full h-full bg-transparent border-0 outline-0 border-2 border-white/25 rounded-3xl text-base text-white py-5 pr-11 pl-5 placeholder:text-white", placeholder: "Email" %>
      <i class='bx bxs-user absolute right-5 h-5 translate-y-1/2 text-xl'></i>
    </div>

    <div class="relative w-full h-12 mt-2 mb-7">
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full h-full bg-transparent border-0 outline-0 border-2 border-white/25 rounded-3xl text-base text-white py-5 pr-11 pl-5 placeholder:text-white", placeholder: "Password" %>
      <i class='bx bxs-lock-alt absolute right-5 h-5 translate-y-1/2 text-xl'></i>
    </div>

    <div class="flex justify-between text-sm -mt-4 mb-4">
      <div>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>
      </div>
<!--      <a href="#" class="text-white no-underline hover:underline">Forgot password?</a>-->
    </div>


    <%= f.submit "Login", class: "btn w-full h-11 bg-white rounded-3xl pointer text-base text-gray-700 font-semibold" %>

    <div class="text-sm text-center marging mb-4 mt-5">
      Not a member?
      <%= link_to "Register", new_user_registration_path, class:"text-white no-underline hover:underline font-semibold"	 %>
    </div>
  <% end %>
</div>
</body>
